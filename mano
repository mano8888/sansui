- hosts: ubuntu
  tasks:
 - name: install git package
   apt: name=apt-get install git state=latest
   - notify:
     - start git
- hosts: all
  tasks:
 - name: install nginx
   apt: name=yum -y install nginx state=latest
 - notify:
 - start nginx
-hosts: ubuntu
 tasks:
- name: install apache2
 apt: name= apt-get install apache2 state=latest
 ansible: ansible_distribution manager=="ubuntu"
these are the ansible playbooks
